{
  "configurations": [
    {
      "name": "API debug",
      "request": "launch",
      "cwd": "${workspaceFolder}/_project/api",
      "runtimeArgs": ["debug"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "API Debug Attach",
      "port": 9229,
      "cwd": "${workspaceFolder}/_project/api",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "sourceMaps": true
    }
  ]
}
